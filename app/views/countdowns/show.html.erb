<section class="hero">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title"><%= @countdown.name %></h1>

      <div class="countdown">
        <div class="count">
          <span>0</span><br>
          <span>Days</span>
        </div><!--
     --><div class="count">
          <span>0</span><br>
          <span>Hours</span>
        </div><!--
     --><div class="count">
          <span>0</span><br>
          <span>Minutes</span>
        </div><!--
     --><div class="count">
          <span>0</span><br>
          <span>Seconds</span>
        </div>
      </div>

      <!-- <p>Would you like an email notification when the countdown is about to expired?</p> -->
      <p>Share this countdown:</p>
      <%= text_field_tag :share, countdown_url(@countdown), style: "margin-bottom: 2rem;" %>

      <p class="small"><%= link_to "Make A New Countdown" %><!-- &bull; --><%#= link_to "See Other Countdowns" %></p>
    </div>
  </div>
</section>


<style type="text/css">
  .countdown { margin-bottom: 2rem; }
  .count {
    display: inline-block;
    background: #7711bb;
    color: #fff;
    width: 110px;
    border-radius: 5px;
    margin: 1rem 0.25rem;
  }

  .count span:first-child {
    font-size: 3rem;
  }

  .count span:last-child {
    margin-bottom: 1rem;
    display: block;
  }
</style>